{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "COVID-19 South Africa",
      "version": "1.0.0"
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "telNo": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "address": {
              "type": "object",
              "properties": {
                "street": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "region": {
                  "type": "string"
                },
                "code": {
                  "type": "string"
                },
                "country": {
                  "type": "string"
                }
              }
            },
            "password": {
              "type": "string",
              "format": "password"
            }
          }
        },
        "Error": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "message": {
              "type": "string"
            },
            "code": {
              "type": "string"
            }
          }
        },
        "CountryStat": {
          "type": "object",
          "properties": {
            "deaths": {
              "type": "integer"
            },
            "unknownCases": {
              "type": "integer"
            },
            "date": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "regions": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/RegionalStat"
              }
            }
          }
        },
        "RegionalStat": {
          "type": "object",
          "properties": {
            "region": {
              "type": "string"
            },
            "confirmedCases": {
              "type": "integer"
            },
            "testCases": {
              "type": "integer"
            },
            "deaths": {
              "type": "integer"
            }
          }
        }
      },
      "responses": {
        "GenericError": {
          "description": "Error object",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Error"
              }
            }
          }
        },
        "UserResponse": {
          "description": "Response user",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/User"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      },
      "security": [
        {
          "bearerAuth": []
        }
      ]
    }
  },
  "apis": [
    "./routes/statistics.route.js",
    "./routes/user.route.js"
  ]
}
